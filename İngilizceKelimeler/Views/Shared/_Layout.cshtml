<!DOCTYPE html>
<style>
    .headera {
        color: white;
    }
    .sayfalar{
        border-left:2px solid white;
        margin-left:10px;
    }
    .sayfalar:hover{
        transform: scale(1.2);
        transition:all .3s;
    }
</style>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - İngilizceKelimeler</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/İngilizceKelimeler.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3 ">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">İngilizceKelimeler</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav flex-grow-1">
 
                        <li class="nav-item sayfalar">
                            <a class="nav-link text-white" asp-area="" asp-controller="English" asp-action="List">Kelimeler</a>
                        </li>
                        <li class="nav-item sayfalar">
                            <a class="nav-link text-white" asp-area="" asp-controller="KelimeTest" asp-action="Index">Quiz</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
