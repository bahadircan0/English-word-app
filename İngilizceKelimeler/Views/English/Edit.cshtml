@{
}
@model İngilizceKelimeler.Models.Entity.EnglishKelimeler

@if (Model is null)
{
    <p>Kelime bulunamadı</p>

}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label"> Id</label>
            <input asp-for="KelimeId" class="form-control" type="text" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Kelimenin İngilizcesi</label>
            <input asp-for="Kelimeİng" class="form-control" type="text" />
        </div>
        <div class="mt-3">
            <label class="form-label">Kelimenin Türkçesi</label>
            <input asp-for="KelimeTur" class="form-control" type="text" />
        </div>

        <div class="mt-3">
            <label class="form-label">Görünürlülük</label>
            <select name="KelimeVisible"   asp-for="KelimeVisible" class="form-control">
                <option value="True">Evet</option>
                <option value="False">Hayır</option>
            </select> 
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Kaydet</button>

            <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="English">Sil</button>

         

        </div>
    </form>
}